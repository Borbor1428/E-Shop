@model EmptyLayer.Entities.Stock

@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Stok Güncelle</h2>

@using (Html.BeginForm("Update", "AdminStock", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="ProductId">Ürün Seçiniz</label>
        @Html.DropDownListFor(m => m.ProductId, (IEnumerable<SelectListItem>)ViewBag.Products, "Ürün Seçiniz", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ProductId, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label for="Quantity">Stok Miktarı</label>
        @Html.TextBoxFor(m => m.Quantity, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Quantity, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Güncelle</button>
    <a href="/AdminStock/Index" class="btn btn-secondary">İptal</a>
}
